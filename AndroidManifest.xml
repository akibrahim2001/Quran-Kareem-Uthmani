<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cepmuvakkit.kuran"
    android:installLocation="auto"
    android:versionCode="15"
    android:versionName="3" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="14" />

    <supports-screens
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".QuranDataActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.QuranActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".AboutUsActivity" />
        <activity android:name=".HelpActivity" />
        <activity
            android:name=".ui.PagerActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.TranslationManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuranPreferenceActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".SearchActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".QuranForwarderActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="quran" />
            </intent-filter>
        </activity>

        <!-- declare the default searchable Activity for the whole app -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchActivity" />
        <!-- provides search suggestions for verses. -->
        <provider
            android:name=".data.QuranDataProvider"
            android:authorities="com.cepmuvakkit.kuran.data.QuranDataProvider" />

        <receiver android:name=".service.util.AudioIntentReceiver" >
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.QuranDownloadService"
            android:enabled="true" />
        <service
            android:name=".service.AudioService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.cepmuvakkit.kuran.action.PLAYBACK" />
                <action android:name="com.cepmuvakkit.kuran.action.PLAY" />
                <action android:name="com.cepmuvakkit.kuran.action.PAUSE" />
                <action android:name="com.cepmuvakkit.kuran.action.SKIP" />
                <action android:name="com.cepmuvakkit.kuran.action.REWIND" />
                <action android:name="com.cepmuvakkit.kuran.action.STOP" />
                <action android:name="com.cepmuvakkit.kuran.action.CONNECT" />
                <action android:name="com.cepmuvakkit.kuran.action.UPDATE_REPEAT" />
            </intent-filter>
        </service>

        <activity android:name="net.hockeyapp.android.UpdateActivity" />
    </application>

</manifest>